
    <section class="form-container">
        <h2>Register</h2>
        <form method="POST">
            <label for="name">Name:</label>
            <input type="text" id="name" value="{{registerData.username}}" name="username">

            <label for="email">Email:</label>
            <input type="email" id="email" value="{{registerData.email}}" name="email">

            <label for="password">Password:</label>
            <input type="password" id="password" value="{{registerData.password}}" name="password">

            <label for="password">Repeat Password:</label>
            <input type="password" id="re-password" value="{{registerData.rePassword}}" name="rePassword">

            <button type="submit">Register</button>
        </form>
        <p>Already have an account? <a href="#">Login here</a>.</p>
    </section>