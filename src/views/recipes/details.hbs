<article class="recipe-detail">
    <img src="{{recipe.imageUrl}}"
        alt="{{recipe.name}}">
    <h2>{{recipe.name}}</h2>
    <p>{{recipe.description}}</p>

    <h3>-----------------------------------------------------</h3>

    <h3>Ingredients:</h3>
    <p>{{recipe.ingredients}}</p>

    <h3>-----------------------------------------------------</h3>

    <h3>Instructions:</h3>
    <p>{{recipe.instructions}}</p>

    <h3>-----------------------------------------------------</h3>

    <h3>People Who Recommend: {{recommendCount}}</h3>
</article>

<div class="command">
    {{#if isOwner}}
    <a href="/recipe/edit/{{recipe._id}}">Edit</a>
    <a href="/recipe/delete/{{recipe._id}}">Delete</a>
    {{else if isRecommend}}
    <p>You've already recommended this recipe!</p>
    {{else if isAuthenticated}}
    <a href="/recipe/recommend/{{recipe._id}}">Recommend</a>
    {{/if}}
</div>