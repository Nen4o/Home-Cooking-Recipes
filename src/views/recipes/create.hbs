
    <section class="form-container">
        <h2>Create Recipe</h2>
        <form method="POST">
            <label for="title">Recipe Title:</label>
            <input type="text" id="title" value="{{recipeData.name}}" name="name">

            <label for="description">Description:</label>
            <textarea id="description" value="{{recipeData.description}}" name="description"></textarea>

            <label for="ingredients">Ingredients:</label>
            <textarea id="ingredients" value="{{recipeData.ingredients}}" name="ingredients"></textarea>

            <label for="instructions">Instructions:</label>
            <textarea id="instructions" value="{{recipeData.instructions}}" name="instructions"></textarea>

            <label for="image">Image URL:</label>
            <input type="url" id="image" value="{{recipeData.imageUrl}}" name="imageUrl">

            <button type="submit">Create Recipe</button>
        </form>
    </section>
